@model E_magazin.Data.Models.Category

@{
    ViewData["Title"] = "Редактирай категория";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="rowAsni">Редактирай категория</h2>

<hr />
<div class="rowAsni">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактирай" class="btn btn-danger crb" />
                <a asp-action="CategoryList" class="btn btn-primary">Back to List</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
