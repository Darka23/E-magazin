@model E_magazin.Data.Models.Product

@{
    ViewData["Title"] = "Редактирай продукт";
}

<h2 class="rowAsni">Редактирай продукт</h2>

<hr />
<div class="rowAsni">
    <div class="col-md-4">
        <form asp-action="EditProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Снимка (линк)</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="@Model.ImageUrl"/>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" placeholder="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" placeholder="@Model.Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label" style="margin-left:20px; margin-top:10px;">Производител</label>
                <select asp-for="ManufacturerId" style="color:red;" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMeasure" class="control-label" style="margin-left:20px; margin-top:10px;">Мерна единица</label>
                <select asp-for="UnitOfMeasureId" style="color:red;" class="form-control" asp-items="ViewBag.UnitOfMeasureId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label" style="margin-left:20px; margin-top:10px;">Категория</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyingPrice" class="control-label">Цена на закупуване</label>
                <input asp-for="BuyingPrice" class="form-control" placeholder="@Model.BuyingPrice"/>
                <span asp-validation-for="BuyingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellingPrice" class="control-label">Цена на продажба</label>
                <input asp-for="SellingPrice" class="form-control" placeholder="@Model.SellingPrice"/>
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактирай" class="btn btn-danger crb" />
                <a asp-action="ProductDetails" asp-controller="Product" asp-area="" asp-route-id="@Model.Id" class="btn btn-primary">Върни се</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
