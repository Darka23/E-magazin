@model E_magazin.Data.Models.Product

@{
    ViewData["Title"] = "Добави продукт";
}

<h2 class="rowAsni">Добави продукт</h2>

<div class="rowAsni">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Снимка(линк)</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ManufacturerId" style="color:red;  margin-left:20px; margin-top:10px;" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                <label asp-for="ManufacturerId" class="control-label">Производител</label>
            </div>
            <div class="form-group">
                <select asp-for="UnitOfMeasureId" style="color:red; margin-left:20px; margin-top:10px;" class="form-control" asp-items="ViewBag.UnitOfMeasureId"></select>
                <label asp-for="UnitOfMeasureId" class="control-label">Мерна единица</label>
            </div>
            <div class="form-group">
                <select asp-for="CategoryId" style="color:red;  margin-left:20px; margin-top:10px;" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <label asp-for="CategoryId" class="control-label">Категория</label>
            </div>
            <div class="form-group">
                <label asp-for="BuyingPrice" class="control-label">Цена на закупуване</label>
                <input asp-for="BuyingPrice" class="form-control" />
                <span asp-validation-for="BuyingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellingPrice" class="control-label">Цена на продажба</label>
                <input asp-for="SellingPrice" class="form-control" />
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-danger crb" />
                <a asp-action="AdminPanel" asp-area="Admin" asp-controller="Admin" class="btn btn-primary">Върни се в Админ панела</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
