@model E_magazin.Data.Models.SoldProduct

@{
    ViewData["Title"] = "Купи продукт";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="rowAsni">Купи продукт</h2>

<div class="rowAsni">
    <div class="col-md-4">
        <form asp-action="SellProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Количество</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Купи" class="btn log-btn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
